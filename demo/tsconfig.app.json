{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
        // "../packages/fast-start/index.ts",
        // "../packages/fast-start-control-flow/index.ts"
    ],
    "exclude": ["src/**/__tests__/*"],
